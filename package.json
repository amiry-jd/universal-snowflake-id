{
  "name": "@amiry-jd/universal-snowflake-id",
  "description": "Universal Snowflake ID generator for Node.js, Browsers, Deno, and Bun. Base62 encoded.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/amiry-jd/universal-snowflake-id"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "version": "1.0.5",
  "author": "Javad Amiry",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs.js",
    "import": "./dist/index.esm.js"
  },
  "scripts": {
    "release": "bunx release-it",
    "build": "microbundle --strict --format cjs,esm,umd",
    "test": "bun test"
  },
  "keywords": [
    "snowflake",
    "id",
    "base62",
    "typescript",
    "bun",
    "deno",
    "uuid",
    "browser",
    "sortable",
    "ulid"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "microbundle": "^0.15.1",
    "release-it": "^19.0.3"
  }
}
